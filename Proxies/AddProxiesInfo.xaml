                <Label Foreground="White"  FontSize="12"  >SAVE AS</Label>
                <TextBox BorderThickness="0 0 0 1" x:Name="proxyName" Foreground="White" Width="150"  FontSize="13" Margin="20 0 0 0"  BorderBrush="#ccc">
