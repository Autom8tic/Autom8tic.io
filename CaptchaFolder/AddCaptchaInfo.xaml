                    <Image Width="50" Source="/add.png"></Image>
                </Button>
                <Button Visibility="Hidden" Height="30" Click="btn_Captchas_Click" Name="btn_Captchas"  Foreground="LightSteelBlue"  Background="#607d8b"  Margin="20 0 0 0"  BorderBrush="#607d8b">
